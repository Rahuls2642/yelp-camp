<% layout('layouts/boilerplate') %>
   <div class="row">
    <h1 class="text-center">New campgrounds</h1>
    <div class="col-6 offset-3" >
  <form class="needs-validation" action="/campgrounds" method="POST" novalidate>
    <div class="mb-3">
        
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" name="title" id="title" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="location">location</label>
        <input class="form-control" type="text" name="location" id="location" required>
    </div>
    <div class="mb-3">
        <label class="form-label" for="price">Image URL</label>
        <input class="form-control" type="text" name="image" id="image" required>
    </div>
    <div class="mb-3">
       <label class="form-label" for="image">Price</label>
    <div class="input-group">
  <span class="input-group-text" id="price-label">$</span>
  <input type="text" class="form-control" name="price" id="price" placeholder="0" aria-label="Username" aria-describedby="price-label" required>
</div>
</div>
    <div class="mb-3">
        <label class="form-label" for="descriptions">Descriptions</label>
        <textarea class="form-control" type="text" name="descriptions" id="image" required></textarea>
    </div>
    <div class="mb-3">
    <button class="btn btn-success">Add campground</button></div>
  </form>
    </div>
   </div>

   
